{
  "name": "bun-test-express-ts",
  "module": "./src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch --smol --hot ./src/server.ts",
    "start": "bun ./src/server.ts",
    "bundle": "bun build ./src/server.ts --outdir ./dist --target bun",
    "type-check": "tsc --noEmit",
    "type-watch": "tsc --noEmit -w"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "express": "^5.2.1",
    "mongoose": "^9.1.5"
  }
}
